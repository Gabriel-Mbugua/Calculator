<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="40pt"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="44dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="0.5dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:padding="15pt"
                android:text="AC"
                android:onClick="btnClearEvent"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="+/-"
                android:textSize="8pt"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"/>

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnPercentEvent"
                android:padding="15pt"
                android:text="%"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnOperationColor"
                android:onClick="btnOperationEvent"
                android:padding="15pt"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_marginBottom="0.5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="0.5dp">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="7"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="8"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="9"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnOperationColor"
                android:onClick="btnOperationEvent"
                android:padding="15pt"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="0.5dp">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:padding="15pt"
                android:text="4"
                android:onClick="btnNumberEvent"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="5"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="6"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnOperationColor"
                android:onClick="btnOperationEvent"
                android:padding="15pt"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="0.5dp">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="1"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="2"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:onClick="btnNumberEvent"
                android:padding="15pt"
                android:text="3"
                android:textSize="8pt"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnOperationColor"
                android:onClick="btnOperationEvent"
                android:padding="15pt"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonColor1"
            android:padding="18pt"
            android:text="0"
            android:textSize="8pt"
            android:onClick="btnNumberEvent"
            android:layout_marginRight="0.5dp"
            android:layout_marginEnd="0.5dp"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/buttonColor1"
            android:onClick="btnNumberEvent"
            android:padding="18pt"
            android:text="."
            android:textSize="8pt"
            android:layout_marginRight="0.5dp"
            android:layout_marginEnd="0.5dp"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/btnOperationColor"
            android:onClick="btnEqualsEvent"
            android:padding="18pt"
            android:text="="
            android:textColor="@color/white"
            android:textSize="8pt" />

    </LinearLayout>
</LinearLayout>